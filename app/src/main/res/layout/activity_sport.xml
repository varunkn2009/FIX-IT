<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.varun.fix_it.sport"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/updateDeleteTimeEditText"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:background="#FFFFFF"
        android:layout_below="@+id/updateDeleteDetailsEditText"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginTop="59dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/updateDeleteDateEditText"
        android:layout_below="@+id/updateDeleteTimeEditText"
        android:layout_alignLeft="@+id/updateDeleteTimeEditText"
        android:layout_alignStart="@+id/updateDeleteTimeEditText"
        android:layout_marginTop="109dp"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:background="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/updateDeleteTimeEditText"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/textView4"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/updateDeleteDateEditText"
        android:layout_alignBottom="@+id/updateDeleteDateEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button3"
        android:layout_above="@+id/button4"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/updateDeleteLocationEditText"
        android:layout_alignRight="@+id/updateDeleteTimeEditText"
        android:layout_alignEnd="@+id/updateDeleteTimeEditText"


        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:layout_alignTop="@+id/editText11"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:background="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/updateDeleteDateEditText"
        android:layout_alignStart="@+id/updateDeleteDateEditText" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/updateDeleteTeamEditText"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:background="#FFFFFF"
        android:layout_alignTop="@+id/editText10"
        android:layout_alignLeft="@+id/updateDeleteLocationEditText"
        android:layout_alignStart="@+id/updateDeleteLocationEditText" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Team Name"
        android:ems="10"
        android:id="@+id/editText10"

        android:textColor="#FFFFFF"
        android:layout_below="@+id/editText11"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText11"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Location"
        android:textColor="#FFFFFF"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Team Details"
        android:id="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/editText10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/updateDeleteDetailsEditText"
        android:layout_below="@+id/textView6"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:background="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
