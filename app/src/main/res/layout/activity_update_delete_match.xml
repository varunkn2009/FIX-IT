<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.varun.fix_it.UpdateDeleteMatchActivity"
    android:background="#000000"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/updateDeleteTimeEditText"
        android:focusable="false"
        android:textColor="#000000"
        android:enabled="false"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/updateDeleteLocationEditText"
        android:layout_alignStart="@+id/updateDeleteLocationEditText"
        android:background="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/updateDeleteDateEditText"
        android:focusable="false"
        android:textColor="#000000"
        android:layout_above="@+id/updateDelete_confirm_button"
        android:layout_alignLeft="@+id/updateDelete_confirm_button"
        android:layout_alignStart="@+id/updateDelete_confirm_button"
        android:layout_marginBottom="55dp"
        android:background="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/updateDeleteTimeEditText"
        android:layout_alignRight="@+id/editText10"
        android:layout_alignEnd="@+id/editText10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/textView4"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/updateDeleteDateEditText"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/updateDeleteLocationEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Location"
        android:editable="false"
        android:textColor="#FFFFFF"
        android:id="@+id/editText4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/updateDelete_cancel_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/updateDelete_confirm_button"
        android:layout_alignStart="@+id/updateDelete_confirm_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/updateDelete_confirm_button"
        android:layout_above="@+id/updateDelete_cancel_button"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/updateDeleteLocationEditText"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:elegantTextHeight="false"
        android:textColor="#000000"
        android:background="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateDeleteTeamEditText"
        android:focusable="false"
        android:layout_below="@+id/editText4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/updateDeleteLocationEditText"
        android:layout_alignStart="@+id/updateDeleteLocationEditText"
        android:background="#FFFFFF"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Name"
        android:id="@+id/editText10"
        android:focusable="false"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_alignTop="@+id/updateDeleteTeamEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team Details"
        android:id="@+id/textView10"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/editText10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/updateDeleteDetailsEditText"
        android:focusable="false"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"

        android:background="#FFFFFF"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>



